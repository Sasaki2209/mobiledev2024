<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp"
    android:background="@color/white">

    <!-- Forecast list container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e6e6ff"
        android:padding="8dp"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <!-- first LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_mon"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="0.7"
                tools:ignore="DuplicateIds"/>

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/partly_cloudy"
                android:layout_marginEnd="8dp"
                tools:ignore="DuplicateIds" />

            <!-- Weather Description and Temperature -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:id="@+id/text_view_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_partly_cloudy"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />

                <!-- Temperature Range -->
                <TextView
                    android:id="@+id/text_view_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24C - 31C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

        </LinearLayout>
        <!-- Repeat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_tue"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="0.6" />

            <!-- Weather Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/rainy"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_showers"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24C - 30C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_wed"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.1" />

            <!-- Weather Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/rainy"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_rain"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22C - 23C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_thu"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="2.5"
                tools:ignore="DuplicateIds" />

            <!-- Weather Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/scattered"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_scattered_showers"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22C - 27C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_fri"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.8" />

            <!-- Weather Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/partly_cloudy"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_mostly_cloudy"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22C - 30C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_sat"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.5" />

            <!-- Weather Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/partly_cloudy"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_partly_cloudy"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24C - 31C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_sun"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.8" />

            <!-- Weather Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/thunder"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_thunderstorms"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25C - 28C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_mon"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="15" />

            <!-- Weather Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/rainy"
                android:layout_marginEnd="8dp" />

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_scattered_thunderstorms"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24C - 27C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            tools:ignore="ExtraText">

            <!-- Day Text -->
            <TextView
                android:id="@+id/text_view_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_tue"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_weight="1.3"
                tools:ignore="DuplicateIds" />

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/image_view_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/scattered"
                android:layout_marginEnd="8dp"
                tools:ignore="DuplicateIds"/>

            <!-- Weather Description and Temperature (Vertical Layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <!-- Weather Description (Condition) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/condition_showers"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Temperature Range -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24C - 26C"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
